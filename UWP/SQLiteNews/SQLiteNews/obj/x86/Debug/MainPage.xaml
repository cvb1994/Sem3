<Page x:ConnectionId='1'
    x:Class="SQLiteNews.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SQLiteNews"
    xmlns:data="using:SQLiteNews.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                  >
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button x:ConnectionId='15'
                x:Name="CombackButton"
                                           
                Content="&#127968;"/>
        </StackPanel>
        <SplitView x:ConnectionId='2'
            Name="SplitViewReadNews"
            Grid.Column="1"
            CompactPaneLength="0"
            DisplayMode="CompactOverlay"
            OpenPaneLength="100">
            <SplitView.Pane>
                <Grid Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer>
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock x:ConnectionId='9'
                                Name="TextBlockViewNewsTitle"
                                FontFamily="Segoe UI"
                                FontSize="20"
                                FontWeight="Bold"
                                IsColorFontEnabled="True"
                                TextWrapping="Wrap"/>
                            
                            <RelativePanel>
                                <TextBlock x:ConnectionId='13'
                                    Name="TextBlockDate"
                                    Margin="0,10,0,0"
                                    FontSize="14"
                                    FontStyle="Italic"/>
                                <TextBlock x:ConnectionId='14'
                                    Name="TextBlockComment"
                                    Margin="20,10,0,0"
                                    FontSize="14"
                                    FontStyle="Italic"
                                    RelativePanel.RightOf="TextBlockDate"/>
                            </RelativePanel>
                            <Image x:ConnectionId='10'
                                Name="ImageViewNewsImage"
                                Width="Auto"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Stretch"/>
                            <TextBlock x:ConnectionId='11'
                                Name="TextBlockViewNewsContent"
                                Margin="0,20,0,0"
                                FontFamily="Segoe UI"
                                TextWrapping="Wrap"/>
                            <TextBlock x:ConnectionId='12'
                                Name="TextBlockViewNewsAuthor"
                                Margin="0,15,0,15"
                                FontFamily="Segoe UI"
                                FontSize="15"
                                FontWeight="Medium"
                                TextAlignment="Right"
                                TextWrapping="Wrap"/>

                        </StackPanel>
                    </ScrollViewer>
                    <GridView x:ConnectionId='3'
                        Name="GridViewConnection"
                        Grid.Column="1"
                        Width="240"
                        IsItemClickEnabled="True"
                                                                
                                                       >

                        <GridView.ItemTemplate>
                            <DataTemplate                          >
                                <StackPanel x:ConnectionId='5'
                                    Width="200"
                                    Height="200"
                                    Padding="8"
                                    Orientation="Vertical">
                                    <Image x:ConnectionId='6' Width="190"                             />
                                    <TextBlock x:ConnectionId='7'                       TextWrapping="Wrap"/>
                                    <TextBlock x:ConnectionId='8' 
                                        FontStyle="Oblique"
                                        FontWeight="Light"
                                                                  
                                        TextAlignment="Right"
                                        TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Pane>
            
        </SplitView>
            

    </Grid>
</Page>

